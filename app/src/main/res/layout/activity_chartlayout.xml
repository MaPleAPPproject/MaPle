<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <group3.mypage.GeoMapView

            android:id="@+id/geoMap"
            android:layout_width="390dp"
            android:layout_height="267dp"
            android:layout_margin="5dp"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="3dp" />



        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/frameLayout_2"
        android:layout_width="392dp"
        android:layout_height="286dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip"

            >

            <TextView
                android:id="@+id/tvcontinent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/visited_countries"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip">

            <TextView
                android:id="@+id/tvasia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/asia"

                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvresultasia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resulta"
                android:textSize="17sp"

                />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip"

            >

            <TextView
                android:id="@+id/tveurope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/europe"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/tvresulteurope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resulte"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip">

            <TextView
                android:id="@+id/tvnorthamerica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/northAmerica"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvresultnorthamerica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resultna"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip">

            <TextView
                android:id="@+id/tvsouthamerica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/southAmerica"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvresultsouthamerica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resultsa"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip">

            <TextView
                android:id="@+id/tvafrica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/africa"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvresultafrica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resultaf"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="392dp"
            android:layout_height="63dp"
            android:layout_margin="3dp"
            android:padding="6dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="6dip">

            <TextView
                android:id="@+id/tvoceania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/oceania"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/tvresultoceania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="6dp"
                android:text="@string/default_resultaa"
                android:textSize="17sp" />


        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>