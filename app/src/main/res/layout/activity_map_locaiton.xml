<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:background="#FFFFFF"
        android:padding="5dp">

        <EditText
            android:id="@+id/etLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btConfirm"
            android:hint="@string/hint_etLocationName"
            android:inputType="text"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btConfirm" />

        <Button
        android:id="@+id/btConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="onConfirmClick"
        android:text="@string/btSubmit"
        android:layout_toStartOf="@+id/btBacktoNewPost"
        android:layout_toLeftOf="@+id/btBacktoNewPost" />


        <Button
            android:id="@+id/btBacktoNewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="onBackToNewPostClick"
            android:text="@string/btok"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</FrameLayout>
